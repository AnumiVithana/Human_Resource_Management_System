<Window x:Class="HRM.View.table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:HRM.View"
        mc:Ignorable="d"
        Title="table" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">



    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="#eff2f7" CornerRadius="30" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <!--Left menu-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Menu Icon-->
                <Button  Margin="20 28 0 35" Style="{StaticResource topButton}">
                    <!--   <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15"/> -->
                </Button>

                <Border Grid.Row="1" Background="#08203e" CornerRadius="0 50 0 30">
                    <DockPanel>
                        <!--Menu Logo-->
                        <Border Width="80" Height="80" Padding="3" Background="#08203e" CornerRadius="100" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Images/falcon.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>

                        <!--Menu Titles-->
                        <TextBlock Text="FALCON" Foreground="White" FontSize="22" FontWeight="SemiBold" DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 0"/>
                        <TextBlock Text="EMPLOYEE MANAGMENT" Foreground="White" FontSize="12" FontWeight="SemiBold" DockPanel.Dock="Top" TextAlignment="Center" Margin="5 5 0 0"/>
                        <TextBlock Text="SYSTEM" Foreground="White" FontSize="12" FontWeight="SemiBold" DockPanel.Dock="Top" TextAlignment="Center" Margin="5 0 0 10"/>

                        <!--Menu Seprator-->
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#4DC9E6"/>

                        <!--Menu Button-->
                        <StackPanel DockPanel.Dock="Top" x:Name="navBarButtons">
                            <Button Style="{StaticResource menuButton}" Click="Button_Click" x:Name="DashBoardButton">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="HomeVariant" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="DashBoard"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" x:Name="EventButton" Click="EventButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="MessageArrowRightOutline" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Pending Requests"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" x:Name ="DepartmentButton" Click="DepartmentButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="OfficeBuilding" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Department"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}"  x:Name="MembersButton" Click="MembersButton_Click"
>
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="AccountMultiple" Style="{StaticResource menuButtonIcon}" />
                                    <TextBlock Text="Members"/>
                                </StackPanel>

                            </Button>

                            <Button Style="{StaticResource menuButton}" x:Name="PerformanceButton" Click="PerformanceButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Speedometer" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Performance"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" x:Name="SalaryButton" Click="SalaryButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="CashMultiple" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Salary"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" x:Name="RequestLeaveButton" Click="RequestLeaveButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ForumOutline" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Request Leave"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource menuButton}" x:Name="MyProfileButton" Click="MyProfileButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Account" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="My Profile"/>
                                </StackPanel>
                            </Button>


                        </StackPanel>

                        <Button Style="{StaticResource menuButton}" VerticalAlignment="Bottom" DockPanel.Dock="Bottom" Margin="15 0 15 20" Click="Button_Click_1">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Logout" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="LogOut"/>
                            </StackPanel>
                        </Button>


                    </DockPanel>
                </Border>
            </Grid>

            <!--Main Section-->

            <Grid Grid.Column="1" Margin=" 30,20,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="13*"/>
                </Grid.RowDefinitions>




                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="47*"/>
                        <ColumnDefinition Width="7*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>



                        <Button x:Name="btnMinimize"
                BorderThickness="0"
                Content="-"
                Foreground="White"
                FontSize="16"
                FontFamily="Berlin Sans FB"
                Cursor="Hand"
                Grid.Column="1"
                Click="btnMinimize_Click"
      >

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#28AEED"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#58efec"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                            Width="20" Height="20"
                            CornerRadius="10">
                                        <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>

                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>

                        <Button x:Name="btnClose"                            
                BorderThickness="0"
                Content="X"
                Foreground="White"
                FontSize="12"
                FontFamily="Berlin Sans FB"
                Cursor="Hand"
                Grid.Column="2"
                Click="btnClose_Click" HorizontalAlignment="Right" Width="25">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="MediumVioletRed"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="20" Height="20"
                            CornerRadius="10"
                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>
                    </Grid>

                </Grid>
            </Grid>
            
            
            <!-- ..................................................Employee DashBoard..................................................  -->
            <Grid Grid.Column="1" Margin="30 10 20 20" x:Name="dashBoardGrid" Visibility="Visible">
                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                


                <!-- Check-in & Check-out time and total hours -->
                <Grid Margin="20" Grid.Row="3">
                    <StackPanel VerticalAlignment="Center" Orientation="Vertical">

                        <!-- Greeting -->
                        <Border BorderThickness="1" Background="#08203e" CornerRadius="7" Padding="15 10">
                            <StackPanel Orientation="Vertical" Margin="0 0 0 5">

                                <!-- Greeting with hand icon -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 8">
                                    <TextBlock x:Name="txtGreeting_employee" FontSize="20" FontWeight="Bold" Foreground="White" Margin="10 0 0 0"/>
                                    <Icon:PackIconMaterial Kind="HandWaveOutline" Width="24" Height="24" Foreground="Orange" Margin="10 0 8 0"/>
                                </StackPanel>

                                <!-- Date Display -->
                                <TextBlock x:Name="txtDate_employee" FontSize="12" Foreground="#dfdfdf" Margin="10 0 0 0"/>
                            </StackPanel>
                        </Border>



                        <!-- Check In Section -->
                        <Border BorderThickness="1" Background="#08203e" CornerRadius="7" Padding="15 5" Margin="0 10">

                            <StackPanel Orientation="Vertical" VerticalAlignment="Center">

                                <!-- TODAY'S ATTENDANCE HEADER -->
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 5 0 0">
                                    <Icon:PackIconMaterial Kind="History" Width="24" Height="24" Foreground="Cyan" Margin="0 0 5 0"/>
                                    <TextBlock Text="Today's Attendance" FontSize="15" FontWeight="Bold" Foreground="White" Margin="0 1 0 0"/>
                                </StackPanel>

                                <!-- Check-In -->
                                <Grid VerticalAlignment="Center" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Check-In Time:" VerticalAlignment="Center" Margin="0 0 10 0" Style="{StaticResource checkTimeHead}"/>
                                    <TextBlock Grid.Column="1" x:Name="txtCheckInTime" VerticalAlignment="Center" Margin="0 0 10 0" Style="{StaticResource checkTimeVal}"/>
                                    <Button Grid.Column="2" x:Name="btnCheckIn" Content="Check In" Click="btnCheckIn_Click" Width="100" Style="{StaticResource checkInOutButton}"/>
                                </Grid>

                                <!-- Check-Out -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Check-Out Time:" VerticalAlignment="Center" FontSize="12" Margin="0 0 10 0" Style="{StaticResource checkTimeHead}"/>
                                    <TextBlock Grid.Column="1" x:Name="txtCheckOutTime" VerticalAlignment="Center" Margin="0 0 10 0" Style="{StaticResource checkTimeVal}"/>
                                    <Button Grid.Column="2" x:Name="btnCheckOut" Content="Check Out" Click="btnCheckOut_Click" Width="100" Visibility="Collapsed" Style="{StaticResource checkInOutButton}"/>
                                </Grid>

                                <!-- Total Working Hours -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Total Working Hours:" VerticalAlignment="Center" Margin="0 0 10 0" Style="{StaticResource checkTimeHead}"/>
                                    <TextBlock Grid.Column="1" x:Name="txtWorkingHours" VerticalAlignment="Center" Foreground="#7CFC00" FontWeight="SemiBold"/>
                                </Grid>

                                <!-- Confirmation and Notes -->
                                <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                                    <!--<CheckBox x:Name="chkConfirmWorkday" Content="I completed your workday!" Foreground="White" Margin="0 5 0 5"/>-->
                                    <CheckBox x:Name="chkConfirmWorkday" Content="I completed your workday!" Foreground="White" Margin="0 5 0 5" Style="{StaticResource CheckBoxStyle1}"/>
                                    <!--<TextBox x:Name="txtEmployeeNote" Text="Your notes..." Height="60" TextWrapping="Wrap" AcceptsReturn="True" Style="{StaticResource notesBlock}" 
                               IsHitTestVisible="False" Panel.ZIndex="1" Visibility="{Binding ElementName=txtSearch,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>-->
                                    <Grid>
                                        <TextBlock Height="50" Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                                    Panel.ZIndex="1" Text=" Write your work summary, achievements, or any issues here..." Visibility="{Binding ElementName=txtEmployeeNote,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>

                                        <TextBox x:Name="txtEmployeeNote" Height="70" TextWrapping="Wrap" TextAlignment="Justify" Style="{StaticResource notesBlock}"/>
                                    </Grid>
                                </StackPanel>
                                <!-- Status Message -->
                                <StackPanel x:Name="statusPanel" Orientation="Horizontal" VerticalAlignment="Center" Margin="0 5" Visibility="Collapsed">
                                    <Icon:PackIconMaterial Kind="CheckCircleOutline" Width="18" Height="18" Foreground="#32CD32" Margin="0 0 5 0"/>
                                    <TextBlock x:Name="txtStatus" Text="I completed your workday!" Foreground="#32CD32" FontWeight="Bold"/>
                                </StackPanel>


                            </StackPanel>
                        </Border>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Leave Balance -->
                            <Border Background="#E3E7FF" CornerRadius="10" Padding="10" Margin="5" Grid.Column="0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
                                        <Icon:PackIconMaterial Kind="CalendarAccountOutline" Width="20" Height="20" Foreground="#4A4AFC" Margin="0 0 10 0"/>
                                        <TextBlock Text="Leave Balance" FontWeight="Bold" Foreground="#4A4AFC"/>
                                    </StackPanel>

                                    <!-- Dynamic Data Binding -->
                                    <Grid Margin="5 2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Icon:PackIconMaterial Kind="CheckCircleOutline" Grid.Column="0" Width="16" Height="16" Foreground="Green" />
                                        <TextBlock Text=" Casual " Grid.Column="1"  Margin="5 0"/>
                                        <TextBlock Text="{Binding CasualLeave}" Grid.Column="2" Margin="5"/>
                                    </Grid>
                                    <Grid Margin="5 2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Icon:PackIconMaterial Kind="CheckCircleOutline" Grid.Column="0" Width="16" Height="16" Foreground="Green"/>
                                        <TextBlock Text=" Sick " Grid.Column="1"  Margin="5 0"/>
                                        <TextBlock Text="{Binding SickLeave}" Grid.Column="2" Margin="5"/>
                                    </Grid>
                                    <Grid Margin="5 2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Icon:PackIconMaterial Kind="CheckCircleOutline" Grid.Column="0" Width="16" Height="16" Foreground="Green"/>
                                        <TextBlock Text=" Annual " Grid.Column="1"  Margin="5 0"/>
                                        <TextBlock Text="{Binding AnnualLeave}" Grid.Column="2" Margin="5"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- This Month -->
                            <Border Background="#D4F1F9" CornerRadius="10" Padding="10" Margin="5" Grid.Column="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
                                        <Icon:PackIconMaterial Kind="AccountOutline" Width="20" Height="20" Foreground="#00ACC1" Margin="0 0 10 0"/>
                                        <TextBlock Text="This Month" FontWeight="Bold" Foreground="#00ACC1"/>
                                    </StackPanel>
                                    <Grid Margin="5 2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Icon:PackIconMaterial Kind="CheckCircleOutline" Grid.Column="0" Width="16" Height="16" Foreground="Green" />
                                        <TextBlock Text=" Present " Grid.Column="1"  Margin="5 0"/>
                                        <TextBlock Text="{Binding PresentDays}" Grid.Column="2" Margin="5"/>
                                    </Grid>
                                    <Grid Margin="5 2" DataContext="{Binding EmployeeInfo}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Icon:PackIconMaterial Kind="CheckCircleOutline" Grid.Column="0" Width="16" Height="16" Foreground="Red"/>
                                        <TextBlock Text=" Absent " Grid.Column="1"  Margin="5 0"/>
                                        <TextBlock Text="{Binding AbsentDays}" Grid.Column="2" Margin="5"/>
                                    </Grid>
                                    <Grid Margin="5 2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Icon:PackIconMaterial Kind="CheckCircleOutline" Grid.Column="0" Width="16" Height="16" Foreground="DarkOrange"/>
                                        <TextBlock Text=" Late " Grid.Column="1"  Margin="5 0"/>
                                        <TextBlock Text="{Binding LateDays}" Grid.Column="2" Margin="5"/>
                                    </Grid>

                                </StackPanel>
                            </Border>

                            <!-- Last Salary -->
                            <Border Background="#E0ECFF" CornerRadius="10" Padding="10" Margin="5" Grid.Column="2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
                                        <Icon:PackIconMaterial Kind="CashMultiple" Width="20" Height="20" Foreground="#003F88" Margin="0 0 10 0"/>
                                        <TextBlock Text="Last Salary" FontWeight="Bold" Foreground="#003F88"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding LastSalary}" FontSize="18" FontWeight="Bold" Foreground="#003F88" Margin="5"/>
                                    <TextBlock Text="{Binding SalaryMonth}" FontSize="12" Foreground="Gray" Margin="5"/>
                                </StackPanel>
                            </Border>

                            <!-- Performance -->
                            <Border Background="#D4F1F9" CornerRadius="10" Padding="10" Margin="5" Grid.Column="3">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 10">
                                        <Icon:PackIconMaterial Kind="Speedometer" Width="20" Height="20" Foreground="#00ACC1" Margin="0 0 10 0"/>
                                        <TextBlock Text="Performance" FontWeight="Bold" Foreground="#00ACC1"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding PerformanceScore}" FontSize="18" FontWeight="Bold" Foreground="#00796B" Margin="5"/>
                                    <TextBlock Text="{Binding LastReviewMonth}" FontSize="12" Foreground="Gray" Margin="5"/>
                                </StackPanel>
                            </Border>
                        </Grid>


                    </StackPanel>
                </Grid>

               

                <!--

                <Button Style="{StaticResource topButton}" Margin="0 0 20 0" Background="#dcdcdc" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Cog"/>
                </Button>
                <Button Style="{StaticResource topButton}" Margin="0 0 55 0" Background="#dcdcdc" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Bell"/>
                </Button>

-->
                <TextBlock Text="DashBoard" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 60 0 0"
               HorizontalAlignment="Left" Foreground="#121518"/>



                <Separator Height="1" Grid.Row="2" Background="#dae2ea" Margin="0 -1 0 10"/>


            </Grid>


            <!--..................................................Admin Dashboard..................................................-->
            <Grid Grid.Column="1" Margin="30 10 20 20" x:Name="dashBoardAdminGrid" Visibility="Hidden">
                <Grid.RowDefinitions>

                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>


                <StackPanel Grid.Row ="2" VerticalAlignment="Center" Orientation="Vertical">

                    <!-- Greeting -->
                    <Border BorderThickness="1" Background="#08203e" CornerRadius="7" Padding="15 10" Margin="0 20 0 0 ">
                        <StackPanel Orientation="Vertical" Margin="0 0 0 5">

                            <!-- Greeting with hand icon -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 0 8">
                                <TextBlock x:Name="txtGreeting" FontSize="20" FontWeight="Bold" Foreground="White" Margin="10 0 0 0"/>
                                <Icon:PackIconMaterial Kind="HandWaveOutline" Width="24" Height="24" Foreground="Orange" Margin="10 0 8 0"/>
                            </StackPanel>

                            <!-- Date Display -->
                            <TextBlock x:Name="txtDate" FontSize="12" Foreground="#dfdfdf" Margin="10 0 0 0"/>
                        </StackPanel>
                    </Border>

                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>


                        <!-- Total Employee -->
                        <Border Background="#E3E7FF" CornerRadius="10" Padding="10" Margin="0 20 5 0" Grid.Column="0">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 10" >
                                    <Icon:PackIconMaterial Kind="AccountMultiple" Width="50" Height="50" HorizontalAlignment="Center" Foreground="#4A4AFC" Margin="0 10"/>
                                    <TextBlock Text="{Binding PresentDays}" FontWeight="Bold"  FontSize="20"  Foreground="#4A4AFC" HorizontalAlignment="Center" Margin="0 0 0 5"/>
                                    <TextBlock Text="Total Employees" FontWeight="Light" FontSize="10" HorizontalAlignment="Center" Foreground="DarkSlateGray" Margin="0 0 0 5"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Present Today -->
                        <Border Background="#cefad0" CornerRadius="10" Padding="10" Margin="5 20 5 0" Grid.Column="1">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 10" >
                                    <Icon:PackIconMaterial Kind="AccountCheck" Width="50" Height="50" HorizontalAlignment="Center" Foreground="Green" Margin="0 10"/>
                                    <TextBlock Text="{Binding PresentDays}" FontWeight="Bold"  FontSize="20"  Foreground="Green" HorizontalAlignment="Center" Margin="0 0 0 5"/>
                                    <TextBlock Text="Present Today" FontWeight="Light" FontSize="10" HorizontalAlignment="Center" Foreground="DarkSlateGray" Margin="0 0 0 5"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- absent Today -->
                        <Border Background="#ffdadb" CornerRadius="10" Padding="10" Margin="5 20 5 0" Grid.Column="2">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 10" >
                                    <Icon:PackIconMaterial Kind="AccountCancel" Width="50" Height="50" HorizontalAlignment="Center" Foreground="#B00020" Margin="0 10"/>
                                    <TextBlock Text="{Binding PresentDays}" FontWeight="Bold"  FontSize="20"  Foreground="#B00020" HorizontalAlignment="Center" Margin="0 0 0 5"/>
                                    <TextBlock Text="Absent Today" FontWeight="Light" FontSize="10" HorizontalAlignment="Center" Foreground="DarkSlateGray" Margin="0 0 0 5"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Present Today -->
                        <Border Background="#ffdadb" CornerRadius="10" Padding="10" Margin="5 20 5 0" Grid.Column="2">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 10" >
                                    <Icon:PackIconMaterial Kind="AccountCancel" Width="50" Height="50" HorizontalAlignment="Center" Foreground="#B00020" Margin="0 10"/>
                                    <TextBlock Text="{Binding PresentDays}" FontWeight="Bold"  FontSize="20"  Foreground="#B00020" HorizontalAlignment="Center" Margin="0 0 0 5"/>
                                    <TextBlock Text="Absent Today" FontWeight="Light" FontSize="10" HorizontalAlignment="Center" Foreground="DarkSlateGray" Margin="0 0 0 5"/>
                                </StackPanel>
                            </Grid>
                        </Border>


                        <!-- Pending leave Today -->
                        <Border Background="#ffd8b8" CornerRadius="10" Padding="10" Margin="5 20 5 0" Grid.Column="3">
                            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 10" >
                                    <Icon:PackIconMaterial Kind="NotebookCheck" Width="50" Height="50" HorizontalAlignment="Center" Foreground="DarkOrange" Margin="0 10"/>
                                    <TextBlock Text="{Binding PendingRequest}" FontWeight="Bold"  FontSize="20"  Foreground="DarkOrange" HorizontalAlignment="Center" Margin="0 0 0 5"/>
                                    <TextBlock Text="Pending Request" FontWeight="Light" FontSize="10" HorizontalAlignment="Center" Foreground="DarkSlateGray" Margin="0 0 0 5"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>






                </StackPanel>

                <Grid />
                




                <!--

                <Button Style="{StaticResource topButton}" Margin="0 0 20 0" Background="#dcdcdc" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Cog"/>
                </Button>
                <Button Style="{StaticResource topButton}" Margin="0 0 55 0" Background="#dcdcdc" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Bell"/>
                </Button>

-->
                <TextBlock Text=" Admin DashBoard" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 60 0 0"
               HorizontalAlignment="Left" Foreground="#121518"/>



                <Separator Height="1" Grid.Row="3" Background="#dae2ea" Margin="0 -1 0 10"/>


            </Grid>

            <!--..................................................Admin Dashboard end..................................................-->







