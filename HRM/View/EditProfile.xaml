<Window x:Class="HRM.View.EditProfile"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:HRM.View"
         mc:Ignorable="d"
         Title="editProfile" Height="620" Width="600"
         WindowStyle="None"
         ResizeMode="NoResize"
         Background="Transparent"
         AllowsTransparency="true"
         WindowStartupLocation="CenterScreen"
         MouseDown="Window_MouseDown_1">

    <Border CornerRadius="29">
        <!--<Border.Background>
            <ImageBrush ImageSource="/images/technology-8028575_1280.jpg"
                         Stretch="None"/>
        </Border.Background>-->

        <Border CornerRadius="27"
          BorderThickness="3"
          >

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#4DC9E6" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#133a94" Offset="0"/>
                    <GradientStop Color="#08203e" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>


                    <TextBlock Text="Falcon Technologies - Edit Profile"
                            Foreground="AliceBlue"
                            FontSize="13"
                            FontFamily="Berlin San FB"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Margin="13,0,0,0"/>

                    <Button x:Name="btnMinimize"
                         BorderThickness="0"
                         Content="-"
                         Foreground="White"
                         FontSize="16"
                         FontFamily="Berlin San FB"
                         Cursor="Hand"
                         Grid.Column="1"
                         Click="btnMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#58EFEC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20" CornerRadius="10"
                                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"
                         BorderThickness="0"
                         Content="X"
                         Foreground="White"
                         FontSize="12"
                         FontFamily="Berlin San FB"
                         Cursor="Hand"
                         Grid.Column="2"
                         Click="btnClose_Click" Height="30" VerticalAlignment="Top">


                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="MediumVioletRed"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20" CornerRadius="10"
                                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <StackPanel
             Grid.Row="1"
             Orientation="Vertical"
             Margin="94,20,32,0">


                    <TextBlock Text="Edit Profile"
                              Foreground="White"
                               Margin="0,5,0,0"
                FontSize="32"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>

                    <!--<TextBlock Text="Employee ID"
                Foreground="AliceBlue"
                FontSize="13"
                FontWeight="Medium"
                                          
                Margin="0,20,0,0"/>

                    <TextBox x:Name="txtEmployeeID"
              FontSize="13"
              FontWeight="Medium"
              FontFamily="Montserrat"                            
              Foreground="White"
              Background="Transparent"
              CaretBrush="LightGray"
              BorderBrush="DarkGray"
              BorderThickness="0,0,0,1"
              Height="28"
              VerticalContentAlignment="Center"
              Margin="0,5,0,0"
              Padding="10,0,0,0"/>

                    <TextBlock Text="New Password"
                Foreground="AliceBlue"
                FontSize="13"
                FontWeight="Medium"
                      
                Margin="0,20,0,0"/>

                    <PasswordBox x:Name="txtNewPass"
              FontSize="13"
              FontWeight="Medium"
              FontFamily="Montserrat"                            
              Foreground="White"
              Background="Transparent"
              CaretBrush="LightGray"
              BorderBrush="DarkGray"
              BorderThickness="0,0,0,1"
              Height="28"
              VerticalContentAlignment="Center"
              Margin="0,5,0,0"
              Padding="10,0,0,0"/>


                    <TextBlock Text="Verify New Password"
   Foreground="AliceBlue"
   FontSize="13"
   FontWeight="Medium"
         
   Margin="0,20,0,0"/>

                    <PasswordBox x:Name="txtVerifyNewPass"
 FontSize="13"
 FontWeight="Medium"
 FontFamily="Montserrat"                            
 Foreground="White"
 Background="Transparent"
 CaretBrush="LightGray"
 BorderBrush="DarkGray"
 BorderThickness="0,0,0,1"
 Height="28"
 VerticalContentAlignment="Center"
 Margin="0,5,0,0"
 Padding="10,0,0,0"/>-->

                    <Grid Margin="35">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- First Name -->
                        <TextBlock Text="First Name" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White"/>
                        <TextBox x:Name="txtFirstName" Grid.Row="0" Grid.Column="1" Margin="0,8,0,10"  Height="22" />

                        <!-- Last Name -->
                        <TextBlock Text="Last Name" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White"/>
                        <TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="1" Margin="0,10,0,10"  Height="22"  />

                        <!-- Gender -->
                        <TextBlock Text="Gender" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,10"  >
                            <RadioButton x:Name="rbMale" Content="Male" GroupName="Gender" Margin="5" Foreground="White" />
                            <RadioButton x:Name="rbFemale" Content="Female" GroupName="Gender" Margin="5" Foreground="White"/>
                            <RadioButton x:Name="rbOther" Content="Other" GroupName="Gender" Margin="5" Foreground="White"/>
                        </StackPanel>

                        <!-- Department -->
                        <TextBlock Text="Department" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White" />
                        <ComboBox x:Name="cbDepartment" Grid.Row="3" Grid.Column="1" Margin="0,10,0,10" Height="22">
                            <ComboBoxItem Content="HR" />
                            <ComboBoxItem Content="IT" />
                            <ComboBoxItem Content="Finance" />
                            <ComboBoxItem Content="Marketing" />
                        </ComboBox>

                        <!-- Position -->
                        <TextBlock Text="Position" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White" />
                        <ComboBox x:Name="cbPosition" Grid.Row="4" Grid.Column="1" Margin="0,10,0,10" Height="22">
                            <ComboBoxItem Content="Department Head" />
                            <ComboBoxItem Content="Employee" />
                            <ComboBoxItem Content="Admin" />
                           
                        </ComboBox>

                        <!-- Contact Number -->
                        <TextBlock Text="Contact Number" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White"/>
                        <TextBox x:Name="txtContactNumber" Grid.Row="5" Grid.Column="1" Margin="0,10,0,10" Height="22" />

                        <!-- Email -->
                        <TextBlock Text="Email" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White" />
                        <TextBox x:Name="txtEmail" Grid.Row="6" Grid.Column="1" Margin="0,10,0,10" Height="22"/>

                        <!-- Date of Birth -->
                        <TextBlock Text="Date of Birth" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5" Foreground="White"/>
                        <DatePicker x:Name="dpDateOfBirth" Grid.Row="7" Grid.Column="1" Margin="0,10,0,10"  BorderThickness="0" Height="24"/>

                        <!-- Register Button -->

                    </Grid>

                    <Button x:Name="registerbutton"                            
             BorderThickness="0"
             Content= "SAVE CHANGES"

             Foreground="White"
             FontSize="13"
             FontWeight="Medium"
             Cursor="Hand"
             Click="RegisterButton_Click"
             Margin="0,-23,0,0">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#08203e"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40"
                         CornerRadius="20"
                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>