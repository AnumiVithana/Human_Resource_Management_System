<Window x:Class="HRM.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HRM.View"
        mc:Ignorable="d"
        Title="MainView" Height="700" Width="1300"
        WindowStartupLocation = "CenterScreen"
        WindowStyle = "None"
        Background = "Transparent"
        AllowsTransparency = "True">




    <Border CornerRadius="10"
                BorderThickness="2">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#210cae" Offset="0"/>
                <GradientStop Color="#4dc9e6" Offset="1"/>

            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.ColumnDefinitions >
                <!--Navigation menu-->
                <ColumnDefinition Width = "250" />
                <!--Content section-->
                <ColumnDefinition Width = "*" />
            </Grid.ColumnDefinitions >

            <!--Navigation menu-->
            <Border CornerRadius = "10,0,0,10" 
                    Grid.Column = "0" >
                <Border.Background >
                    <LinearGradientBrush>
                        <GradientStop Color = "{StaticResource Background2}" Offset = "0" />
                        <GradientStop Color = "{StaticResource Background1}" Offset = "1" />
                    </LinearGradientBrush >
                </Border.Background >


                <StackPanel>

                    <!--Logo-->
                    <StackPanel Orientation="Horizontal"
                                Height="65"
                                Margin="15,25,0,40">

                        <Image Source="/Images/falcon.png" Height="70"></Image>
                        <TextBlock Text="Falcon Technologies"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"
                                   Margin="6,0,0,0"/>
                    </StackPanel>



                    <!--Menu Buttons-->
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource Button1}"
                                 IsChecked="True"
                                 Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="Dashboard" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
                                 Tag="{StaticResource Button2}"
                                 Command="{Binding ShowCustomerViewCommand}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="My Department" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
             Tag="{StaticResource Button1}"
             IsChecked="True"
             Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="My Performance" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>
                    <RadioButton Style="{StaticResource menuButton}"
             Tag="{StaticResource Button2}"
             Command="{Binding ShowCustomerViewCommand}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="Request a Leave" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton Style="{StaticResource menuButton}"
Tag="{StaticResource Button1}"
IsChecked="True"
Command="{Binding ShowHomeViewCommand}">
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="My Salary" Style="{StaticResource menuButtonText}"/>
                        </StackPanel>
                    </RadioButton>





                </StackPanel>

            </Border>

            <!--Main section-->
            <Border CornerRadius = "0,10,10,0" 
                    Grid.Column = "1" >
                <Border.Background >
                    <LinearGradientBrush StartPoint = "1,1" EndPoint = "0,0" >
                        <GradientStop Color = "{StaticResource Background1}" Offset = "0" />
                        <GradientStop Color = "{StaticResource Background2}" Offset = "1" />
                    </LinearGradientBrush >
                </Border.Background >

                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="35"/>
                        <!--Header/Caption-->
                        <RowDefinition Height="35"/>
                        <!--Content section / Child view-->
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>

                    <!--Control bar-->

                    <StackPanel x:Name ="pnlControlbar"
                                Grid.Row="0"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                               
                                Background="Transparent"
                                Margin="0,0,5,0"
                                MouseLeftButtonDown="pnlControlbar_MouseLeftButtonDown"
                                MouseEnter="pnlControlbar_MouseEnter">
                
<!--Minimize/close buttons-->       
                        
                    <Grid Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="25"/>
                        </Grid.ColumnDefinitions>

                            <Button x:Name="btnClose"                            
    BorderThickness="0"
    Content="X"
    Foreground="White"
    FontSize="12"
    FontFamily="Berlin Sans FB"
    Cursor="Hand"
    Grid.Column="0"
    Click="btnClose_Click">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="MediumVioletRed"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="20" Height="20"
                CornerRadius="10"
                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>

                            </Button>
                            <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Berlin Sans FB"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnMinimize_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#28AEED"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#58efec"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="20" Height="20"
                                        CornerRadius="10"
                                        Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                        </Button>

                        
                    </Grid>



                </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Border>




</Window>
