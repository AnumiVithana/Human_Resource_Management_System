<Window x:Class="HRM.View.ResetView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:HRM.View"
         mc:Ignorable="d"
         Title="resetView" Height="620" Width="600"
         WindowStyle="None"
         ResizeMode="NoResize"
         Background="Transparent"
         AllowsTransparency="true"
         WindowStartupLocation="CenterScreen"
         MouseDown="Window_MouseDown">

    <Border CornerRadius="29">
        <!--<Border.Background>
            <ImageBrush ImageSource="/images/technology-8028575_1280.jpg"
                         Stretch="None"/>
        </Border.Background>-->

        <Border CornerRadius="27"
          BorderThickness="3">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#4DC9E6" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#133a94" Offset="0"/>
                    <GradientStop Color="#08203e" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="24"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>


                    <TextBlock Text="Falcon Technologies - Reset Password"
                            Foreground="AliceBlue"
                            FontSize="13"
                            FontFamily="Berlin San FB"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Margin="13,0,0,0"/>

                    <Button x:Name="btnMinimize"
                         BorderThickness="0"
                         Content="-"
                         Foreground="White"
                         FontSize="16"
                         FontFamily="Berlin San FB"
                         Cursor="Hand"
                         Grid.Column="1"
                         Click="btnMinimize_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#58EFEC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20" CornerRadius="10"
                                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnClose"
                         BorderThickness="0"
                         Content="X"
                         Foreground="White"
                         FontSize="16"
                         FontFamily="Berlin San FB"
                         Cursor="Hand"
                         Grid.Column="2"
                         Click="btnClose_Click">


                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="MediumVioletRed"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="20" Height="20" CornerRadius="10"
                                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <StackPanel Width="220"
             Grid.Row="1"
             Orientation="Vertical"
             Margin="187,20,110,0">

                    <Image Source="/Images/falcon.png"
            Width="200" Height="200"/>

                    <TextBlock Text="Reset Password"
                Foreground="White"
                FontSize="28"
                FontWeight="Bold"
                HorizontalAlignment="Center"/>

                    <TextBlock Text="Employee ID"
                Foreground="AliceBlue"
                FontSize="13"
                FontWeight="Medium"
                                          
                Margin="0,20,0,0"/>

                    <TextBox x:Name="txtEmployeeID"
              FontSize="13"
              FontWeight="Medium"
              FontFamily="Montserrat"                            
              Foreground="White"
              Background="Transparent"
              CaretBrush="LightGray"
              BorderBrush="DarkGray"
              BorderThickness="0,0,0,1"
              Height="28"
              VerticalContentAlignment="Center"
              Margin="0,5,0,0"
              Padding="10,0,0,0"/>

                    <TextBlock Text="New Password"
                Foreground="AliceBlue"
                FontSize="13"
                FontWeight="Medium"
                      
                Margin="0,20,0,0"/>

                    <PasswordBox x:Name="txtNewPass"
              FontSize="13"
              FontWeight="Medium"
              FontFamily="Montserrat"                            
              Foreground="White"
              Background="Transparent"
              CaretBrush="LightGray"
              BorderBrush="DarkGray"
              BorderThickness="0,0,0,1"
              Height="28"
              VerticalContentAlignment="Center"
              Margin="0,5,0,0"
              Padding="10,0,0,0"/>


                    <TextBlock Text="Verify New Password"
   Foreground="AliceBlue"
   FontSize="13"
   FontWeight="Medium"
         
   Margin="0,20,0,0"/>

                    <PasswordBox x:Name="txtVerifyNewPass"
 FontSize="13"
 FontWeight="Medium"
 FontFamily="Montserrat"                            
 Foreground="White"
 Background="Transparent"
 CaretBrush="LightGray"
 BorderBrush="DarkGray"
 BorderThickness="0,0,0,1"
 Height="28"
 VerticalContentAlignment="Center"
 Margin="0,5,0,0"
 Padding="10,0,0,0"/>

                    <Button x:Name="resetbutton"                            
             BorderThickness="0"
             Content="RESET PASSWORD"
             Foreground="White"
             FontSize="12.5"
             FontWeight="Medium"
             Cursor="Hand"
             Click="btnLogIn_Click"
             Margin="0,15,0,0">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#08203e"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40"
                         CornerRadius="20"
                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                </StackPanel>

            </Grid>
        </Border>
    </Border>
</Window>